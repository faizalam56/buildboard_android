<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.buildboard.modules.home.modules.drafts_reply.DraftReplyFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_draft_msg"
            style="@style/edit_text_size_small"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/green_drawable_border"
            android:gravity="start"
            android:padding="@dimen/_5sdp"
            android:hint="@string/brief_summary_of_your_company"
            android:minHeight="@dimen/_100sdp"
            android:singleLine="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_next"
            style="@style/button_style"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/gray_button_background"
            android:text="@string/send"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_draft_msg" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>