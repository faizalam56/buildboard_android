<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_contractor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/image_contractor"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/supplies" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_contractor_name"
        style="@style/textSize_small"
        android:text="Marc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintLeft_toRightOf="@+id/card_contractor"
        app:layout_constraintBottom_toTopOf="@+id/text_company_name"
        android:layout_marginStart="@dimen/_5sdp" />

    <TextView
        android:id="@+id/text_company_name"
        style="@style/textSize_small"
        android:text="Company Name: lorem ipsum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintLeft_toRightOf="@id/card_contractor"
        app:layout_constraintBottom_toTopOf="@+id/rating_contractor"
        android:layout_marginStart="@dimen/_5sdp" />

    <android.support.v7.widget.AppCompatRatingBar
        style="@style/RatingBar"
        android:id="@+id/rating_contractor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:numStars="4"
        android:rating="3"
        android:progressTint="@color/colorCyan"
        app:layout_constraintLeft_toRightOf="@id/card_contractor"
        app:layout_constraintBottom_toBottomOf="@+id/card_contractor"
        android:layout_marginStart="@dimen/_5sdp" />
</android.support.constraint.ConstraintLayout>
    <!--style="?android:attr/ratingBarStyleSmall"-->