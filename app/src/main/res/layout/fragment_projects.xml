<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.buildboard.modules.home.modules.projects.ProjectsFragment">

    <Button
        android:id="@+id/button_create_new_projects"
        style="@style/textSize_smallest"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/green_button_gradient"
        android:drawableTop="@drawable/ic_add_circular_white"
        android:gravity="center"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingTop="@dimen/_15sdp"
        android:text="@string/create_new_projects"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_saved_projects"
        style="@style/textSize_smallest"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/red_button_gradient"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/saved_projects"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/button_create_new_projects"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_open_projects"
        style="@style/textSize_smallest"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/cyan_button_gradient"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/open_projects"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_saved_projects"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_current_projects"
        style="@style/textSize_smallest"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/purple_button_gradient"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/current_projects"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/button_create_new_projects"
        app:layout_constraintTop_toBottomOf="@+id/button_saved_projects" />

    <Button
        android:id="@+id/button_completed_projects"
        style="@style/textSize_smallest"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/blue_button_gradient"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/completed_projects"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_current_projects"
        app:layout_constraintTop_toBottomOf="@+id/button_open_projects" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorDivider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_create_new_projects" />

    <com.buildboard.customviews.BuildBoardTextView
        android:id="@+id/text_projects"
        style="@style/textSize_smaller"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <com.buildboard.customviews.BuildBoardTextView
        android:id="@+id/textProjectDetails"
        style="@style/textSize_smallest"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_projects" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_projects"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textProjectDetails" />
</android.support.constraint.ConstraintLayout>
