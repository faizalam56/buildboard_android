<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_15sdp"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp"
    android:paddingTop="@dimen/_15sdp">

    <com.buildboard.customviews.BuildBoardTextView
        android:id="@+id/text_title"
        style="@style/textSize_large"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="@string/sign_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/image_close"
        app:typeface="robotoLight" />

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:tint="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@+id/text_title"
        app:layout_constraintBottom_toBottomOf="@+id/text_title"
        app:layout_constraintRight_toRightOf="parent" />

    <com.buildboard.customviews.BuildBoardTextView
        android:id="@+id/text_usertype_msg"
        style="@style/textSize_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:text="@string/msg_select_user_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_close"
        app:typeface="robotoBold" />

    <com.buildboard.customviews.BuildBoardTextView
        android:id="@+id/text_consumer"
        style="@style/textSize_medium"
        android:paddingLeft="@dimen/_5sdp"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/green_drawable_border"
        android:text="@string/i_am_a_consumer"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_usertype_msg"
        app:typeface="robotoRegular" />

    <com.buildboard.customviews.BuildBoardTextView
        android:id="@+id/text_contractor"
        style="@style/textSize_medium"
        android:paddingLeft="@dimen/_5sdp"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/green_drawable_border"
        android:text="@string/i_am_a_contractor"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_consumer"
        app:typeface="robotoRegular" />

</android.support.constraint.ConstraintLayout>