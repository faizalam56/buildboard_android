<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_service"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="?android:selectableItemBackground"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false">

            <com.buildboard.customviews.RoundRectCornerImageView
                android:id="@+id/image_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image_available" />

            <com.buildboard.customviews.BuildBoardTextView
                android:id="@+id/text_message_date"
                style="@style/textSize_smallest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/black"
                android:minHeight="@dimen/_20sdp"
                android:minWidth="@dimen/_25sdp"
                android:padding="@dimen/_1sdp" />

            <RelativeLayout
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_service"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_bottom_corner"
                android:clickable="false"
                android:focusable="false">

                <com.buildboard.customviews.BuildBoardTextView
                    android:id="@+id/text_name"
                    style="@style/textSize_smallest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:layout_toLeftOf="@+id/textRatingBar"
                    android:layout_toStartOf="@+id/textRatingBar"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:inputType="textMultiLine|textCapWords|textNoSuggestions"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:textColor="@android:color/black" />

                <com.buildboard.customviews.BuildBoardTextView
                    android:id="@+id/textRatingBar"
                    style="@style/textSize_smallest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/green_background"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:minHeight="@dimen/_20sdp"
                    android:minWidth="@dimen/_25sdp"
                    android:padding="@dimen/_1sdp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>