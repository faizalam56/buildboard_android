<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.buildboard.modules.home.modules.mailbox.inbox.InboxActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_messages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/edit_write_msg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/edit_write_msg"
        style="@style/edit_text_size_smaller"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/gray_drawable_border"
        android:hint="@string/write_message"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/linear_image_reply"
        app:layout_constraintTop_toBottomOf="@+id/recycler_messages" />

    <LinearLayout
        android:id="@+id/linear_image_reply"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/green_button_background"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/edit_write_msg"
        app:layout_constraintLeft_toRightOf="@+id/edit_write_msg"
        app:layout_constraintRight_toRightOf="@id/button_save_as_draft"
        app:layout_constraintTop_toTopOf="@id/edit_write_msg">

        <ImageView
            android:id="@+id/image_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sent" />
    </LinearLayout>

    <Button
        android:id="@+id/button_save_as_draft"
        style="@style/button_style"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/green_drawable_border"
        android:padding="2dp"
        android:text="@string/save_as_draft"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@id/edit_write_msg"
        app:layout_constraintLeft_toRightOf="@+id/linear_image_reply"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_write_msg" />

</android.support.constraint.ConstraintLayout>