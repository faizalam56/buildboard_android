<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.buildboard.modules.signup.SignUpActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_25sdp"
        android:paddingBottom="@dimen/_25sdp"
        android:paddingRight="@dimen/_25sdp"
        android:paddingTop="@dimen/_15sdp">

        <android.support.design.widget.TextInputLayout
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/drawable_border"
            android:id="@+id/textinputlayout_first_name"
            style="@style/textinputlayout_style"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/edit_first_name"
                style="@style/edittext_style"
                android:imeOptions="actionNext"
                android:hint="@string/first_name"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/drawable_border"
            android:id="@+id/textinputlayout_last_name"
            style="@style/textinputlayout_style"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/textinputlayout_first_name">

            <EditText
                android:id="@+id/edit_last_name"
                style="@style/edittext_style"
                android:imeOptions="actionNext"
                android:hint="@string/last_name"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/linear_spinner_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/drawable_border"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textinputlayout_last_name">

            <Spinner
                android:id="@+id/spinner_gender"
                android:overlapAnchor="false"
                style="@style/OverflowMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:gravity="center"
            android:paddingLeft="@dimen/_5sdp"
            android:background="@drawable/drawable_border"
            android:id="@+id/textinputlayout_email"
            style="@style/textinputlayout_style"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/linear_spinner_holder">

            <EditText
                android:id="@+id/edit_email"
                style="@style/edittext_style"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinputlayout_password"
            style="@style/textinputlayout_style"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/textinputlayout_email">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_password"
                style="@style/edittext_style"
                android:imeOptions="actionNext"
                android:hint="@string/password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinputlayout_address"
            style="@style/textinputlayout_style"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/textinputlayout_password">

            <EditText
                android:id="@+id/edit_address"
                style="@style/edittext_style"
                android:imeOptions="actionNext"
                android:hint="@string/address"
                android:inputType="textPostalAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinputlayout_phoneno"
            style="@style/textinputlayout_style"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/textinputlayout_address">

            <EditText
                android:id="@+id/edit_phoneno"
                style="@style/edittext_style"
                android:imeOptions="actionDone"
                android:hint="@string/phone_no"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/linear_spinner_holder_contact_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/drawable_border"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textinputlayout_phoneno">

            <Spinner
                android:id="@+id/spinner_contact_mode"
                android:overlapAnchor="false"
                style="@style/OverflowMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/button_login_google"
            style="@style/button_style"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/gray_button_background"
            android:text="@string/next"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_spinner_holder_contact_mode" />

        <TextView
            android:id="@+id/text_terms_of_service"
            android:text="@string/privacy_policy"
            android:autoLink="all"
            android:linksClickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_login_google"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>