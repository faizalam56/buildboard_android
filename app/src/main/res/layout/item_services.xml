<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:padding="@dimen/_5sdp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_service"
        style="@style/card_view_style_marketplace">

        <ImageView
            android:id="@+id/image_service"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/supplies"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_service_name"
        style="@style/text_view_style_marketplace"
        android:text="Wood Work"
        app:layout_constraintTop_toBottomOf="@+id/card_service" />

    <TextView
        android:id="@+id/text_service_provider_name"
        style="@style/text_view_style_marketplace"
        android:text="John"
        app:layout_constraintTop_toBottomOf="@+id/text_service_name" />
</android.support.constraint.ConstraintLayout>