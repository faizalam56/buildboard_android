<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_service"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.buildboard.customviews.RoundRectCornerImageView
            android:id="@+id/image_service"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_110sdp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/supplies" />

        <RelativeLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/rounded_bottom_corner">

            <com.buildboard.customviews.BuildBoardTextView
                android:id="@+id/text_name"
                style="@style/textSize_smallest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_toLeftOf="@+id/textRatingBar"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:text="Wood Work"
                android:textColor="@android:color/black"
                android:layout_toStartOf="@+id/textRatingBar" />

            <TextView
                android:id="@+id/textRatingBar"
                style="@style/textSize_smallest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/green_background"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:minHeight="@dimen/_20sdp"
                android:minWidth="@dimen/_25sdp"
                android:padding="@dimen/_1sdp"
                android:text="4.5" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>