<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_15sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.buildboard.customviews.BuildBoardEditText
        android:id="@+id/edit_certifying_body"
        style="@style/edit_text_size_small"
        android:background="@drawable/green_drawable_border"
        android:hint="@string/certifying_body"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typeface="robotoRegular" />

    <com.buildboard.customviews.BuildBoardEditText
        android:id="@+id/edit_certification_number"
        style="@style/edit_text_size_small"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/green_drawable_border"
        android:hint="@string/certification_number"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_certifying_body"
        app:typeface="robotoRegular" />

    <com.buildboard.customviews.BuildBoardEditText
        android:id="@+id/edit_certification_desc"
        style="@style/edit_text_size_small"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/green_drawable_border"
        android:hint="@string/certification_brief_description"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:gravity="top"
        android:padding="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_certification_number"
        app:typeface="robotoRegular" />

    <com.buildboard.customviews.BuildBoardEditText
        android:id="@+id/edit_attachment_certification"
        style="@style/edit_text_size_small"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/green_drawable_border"
        android:editable="false"
        android:hint="@string/attachment"
        android:imeOptions="actionNext"
        app:layout_constraintEnd_toStartOf="@+id/image_attachment_certification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_certification_desc"
        app:typeface="robotoRegular" />

    <ImageView
        android:id="@+id/image_attachment_certification"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_attachment"
        app:layout_constraintBottom_toBottomOf="@+id/edit_attachment_certification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_attachment_certification" />

    <LinearLayout
        android:id="@+id/linear_layout_certification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_attachment_certification">

    </LinearLayout>

    <com.buildboard.customviews.BuildBoardTextView
        android:id="@+id/text_add_more_certification"
        style="@style/textSize_smaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/add_more"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_certification"
        app:typeface="robotoMedium" />
</android.support.constraint.ConstraintLayout>
