<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.buildboard.modules.home.modules.profile.contractor.EditContractorProfileActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.buildboard.customviews.BuildBoardTextView
        android:id="@+id/text_business_info"
        style="@style/textSize_small"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableRight="@drawable/ic_arrow_right_18"
        android:drawableEnd="@drawable/ic_arrow_right_18"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/business_info"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <View
        android:id="@+id/divider_businessinfo"
        style="@style/divider"
        app:layout_constraintTop_toBottomOf="@id/text_business_info" />

    <com.buildboard.customviews.BuildBoardTextView
        android:id="@+id/text_type_of_work"
        style="@style/textSize_small"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableRight="@drawable/ic_arrow_right_18"
        android:drawableEnd="@drawable/ic_arrow_right_18"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/type_of_work"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_businessinfo"/>

    <View
        android:id="@+id/divider_work_type"
        style="@style/divider"
        app:layout_constraintTop_toBottomOf="@id/text_type_of_work" />

    <com.buildboard.customviews.BuildBoardTextView
        android:id="@+id/text_documents"
        style="@style/textSize_small"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableRight="@drawable/ic_arrow_right_18"
        android:drawableEnd="@drawable/ic_arrow_right_18"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/documents"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_work_type"/>

    <View
        android:id="@+id/divider_documents"
        style="@style/divider"
        app:layout_constraintTop_toBottomOf="@id/text_documents" />

    <com.buildboard.customviews.BuildBoardTextView
        android:id="@+id/text_previous_work"
        style="@style/textSize_small"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableRight="@drawable/ic_arrow_right_18"
        android:drawableEnd="@drawable/ic_arrow_right_18"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/previous_work"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_documents"/>
</android.support.constraint.ConstraintLayout>
