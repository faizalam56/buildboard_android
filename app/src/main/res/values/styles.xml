<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //10px

    <style name="textSize_smallest" parent="text_view_style">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    //12px

    <style name="textSize_smaller" parent="text_view_style">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    //14px

    <style name="textSize_small" parent="text_view_style">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    //16px

    <style name="textSize_medium" parent="text_view_style">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    //18px

    <style name="textSize_large" parent="text_view_style">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    //22px

    <style name="textSize_header" parent="text_view_style">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    //10px

    <style name="edit_text_size_smallest" parent="edit_text_style">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    //12px

    <style name="edit_text_size_smaller" parent="edit_text_style">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    //14px

    <style name="edit_text_size_small" parent="edit_text_style">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    //16px

    <style name="edit_text_size_medium" parent="edit_text_style">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    //18px

    <style name="edit_text_size_large" parent="edit_text_style">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    //22px

    <style name="edit_text_size_header" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button_styles">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">@dimen/_300sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="edit_text_style" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="text_view_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="card_view_style_marketplace" parent="CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorControlHighlight">@color/colorGreen</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/com_facebook_blue</item>
    </style>
</resources>