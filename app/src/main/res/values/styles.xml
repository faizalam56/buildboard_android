<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="_NoActionBar_" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="_NoActionBar_transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@null</item>
    </style>

    //10px

    <style name="textSize_smallest" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    //12px

    <style name="textSize_smaller" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    //14px

    <style name="textSize_small" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    //16px

    <style name="textSize_medium" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    //18px

    <style name="textSize_large" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    //22px

    <style name="textSize_header" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    //10px

    <style name="edit_text_size_smallest" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    //12px

    <style name="edit_text_size_smaller" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    //14px

    <style name="edit_text_size_small" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    //16px

    <style name="edit_text_size_medium" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    //18px

    <style name="edit_text_size_large" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    //22px

    <style name="edit_text_size_header" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="text_input_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="edit_text_style" parent="edit_text_size_small">
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="text_view_style" parent="textSize_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="OverflowMenu" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:popupBackground">@color/colorGrayLight</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:dropDownWidth">@dimen/_260sdp</item>
    </style>

    <style name="card_view_style_marketplace" parent="CardView">
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="text_view_style_marketplace" parent="text_view_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_5ssp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>
</resources>
