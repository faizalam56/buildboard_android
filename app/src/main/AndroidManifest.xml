<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buildboard">

    <application
        android:name=".app.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".modules.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/_NoActionBar_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/_NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.buildboard.modules.splash.SplashActivity" />
        </activity>
        <activity
            android:name=".modules.signup.SignUpActivity"
            android:label="@string/sign_up"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modules.selection.SelectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modules.paymentdetails.PaymentDetailsActivity"
            android:label="@string/payment_details" />
        <activity
            android:name=".modules.forgotpassword.ForgotPasswordActivity"
            android:label="@string/title_forgot_password" />
        <activity
            android:name=".modules.home.HomeActivity"
            android:label="@string/title_activity_home"></activity>
    </application>

</manifest>