<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buildboard">

    <application
        android:name=".app.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".modules.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/_NoActionBar_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/_NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.buildboard.modules.splash.SplashActivity" />
        </activity>
        <activity
            android:name=".modules.signup.SignUpActivity"
            android:label="@string/sign_up"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.buildboard.modules.login.LoginActivity" />
        </activity>

        <activity
            android:name=".modules.signup.SignUpContractorActivity"
            android:label="@string/sign_up"
            android:screenOrientation="portrait" />

        <activity android:name=".modules.selection.UserTypeLoginActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".modules.signup.SignUpSelectionActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>